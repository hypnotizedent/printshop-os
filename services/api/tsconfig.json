{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["lib/*"],
      "@scripts/*": ["scripts/*"],
      "@mocks/*": ["mocks/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "lib/**/*",
    "scripts/**/*",
    "tests/**/*",
    "mocks/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
