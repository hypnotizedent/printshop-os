# Printavo API Configuration
PRINTAVO_API_KEY=your_api_key_here
PRINTAVO_API_URL=https://www.printavo.com/api

# Strapi Configuration
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_token_here

# JWT Authentication (Phase 1)
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Sync Configuration
SYNC_INTERVAL_MINUTES=15
SYNC_BATCH_SIZE=1
SYNC_MAX_RETRIES=3
SYNC_TIMEOUT_SECONDS=30

# Supplier APIs (for Task 2.2)
SS_ACTIVEWEAR_API_KEY=your_ss_activewear_key
AS_COLOUR_API_KEY=your_as_colour_key
SANMAR_CLIENT_ID=your_sanmar_client_id
SANMAR_CLIENT_SECRET=your_sanmar_client_secret

# Redis Configuration (for Task 2.3)
REDIS_URL=redis://localhost:6379
REDIS_TTL_PRODUCTS_MINUTES=60
REDIS_TTL_PRICES_MINUTES=30

# Analytics Configuration (for Task 3.3)
REVENUE_GROWTH_RATE=1.05
DEFAULT_MARGIN_RATE=0.3
CUSTOMER_ACQ_COST_RATIO=0.1
API_PORT=3002

# Cost Tracking Configuration (for Task 3.4)
OVERHEAD_PERCENTAGE=15.0
DEFAULT_HOURLY_RATE=25.00

# Logging
LOG_LEVEL=info
LOG_FILE=data/logs/api.log

# Environment
NODE_ENV=development
DEBUG=false

# ===========================================
# n8n Workflow Automation
# ===========================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_WEBHOOK_SECRET=your_n8n_webhook_secret

# ===========================================
# Notification Settings
# ===========================================
NOTIFICATIONS_ENABLED=true

# ===========================================
# Twilio (SMS notifications)
# ===========================================
TWILIO_ACCOUNT_SID=AC_your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+15551234567
