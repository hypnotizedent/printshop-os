# =============================================================================
# Production Dashboard Service - Environment Variables Template
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Strapi Connection
# -----------------------------------------------------------------------------
# URL for the Strapi API server
STRAPI_URL=http://localhost:1337

# -----------------------------------------------------------------------------
# Analytics Configuration
# -----------------------------------------------------------------------------
# Labor cost per hour for cost calculations (in USD)
# Used in reports and cost analysis
LABOR_COST_PER_HOUR=20

# Default work hours for employees (when no time entry exists)
DEFAULT_HOURS_WORKED=8.0
DEFAULT_PRODUCTIVE_HOURS=7.5
DEFAULT_BREAK_TIME=0.5

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the production dashboard API
PORT=3002

# Node environment
NODE_ENV=development

# Log level (debug, info, warn, error)
LOG_LEVEL=info
