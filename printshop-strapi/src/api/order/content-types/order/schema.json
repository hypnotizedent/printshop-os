{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "QUOTE",
        "QUOTE_SENT",
        "QUOTE_APPROVED",
        "IN_PRODUCTION",
        "COMPLETE",
        "READY_FOR_PICKUP",
        "PAYMENT_NEEDED",
        "INVOICE_PAID",
        "CANCELLED"
      ],
      "default": "QUOTE"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders"
    },
    "totalAmount": {
      "type": "decimal",
      "default": 0
    },
    "amountPaid": {
      "type": "decimal",
      "default": 0
    },
    "amountOutstanding": {
      "type": "decimal",
      "default": 0
    },
    "salesTax": {
      "type": "decimal",
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "dueDate": {
      "type": "date"
    },
    "notes": {
      "type": "text"
    },
    "productionNotes": {
      "type": "text"
    },
    "customerPO": {
      "type": "string"
    },
    "items": {
      "type": "json"
    },
    "printavoId": {
      "type": "string"
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "order"
    }
  }
}
