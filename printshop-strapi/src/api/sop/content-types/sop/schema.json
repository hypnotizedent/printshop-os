{
  "kind": "collectionType",
  "collectionName": "sops",
  "info": {
    "singularName": "sop",
    "pluralName": "sops",
    "displayName": "SOP",
    "description": "Standard Operating Procedure"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Machines",
        "Processes",
        "Troubleshooting",
        "Safety"
      ],
      "required": true
    },
    "subcategory": {
      "type": "string"
    },
    "tags": {
      "type": "json"
    },
    "summary": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "steps": {
      "type": "json"
    },
    "relatedSOPs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::sop.sop"
    },
    "machineId": {
      "type": "string"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Beginner",
        "Intermediate",
        "Advanced"
      ],
      "default": "Beginner"
    },
    "estimatedTime": {
      "type": "integer",
      "default": 0
    },
    "version": {
      "type": "decimal",
      "default": 1.0
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "lastViewed": {
      "type": "datetime"
    },
    "media": {
      "type": "json"
    },
    "isPublished": {
      "type": "boolean",
      "default": false
    },
    "favorites": {
      "type": "json"
    }
  }
}
