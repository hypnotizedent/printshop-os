{
  "kind": "collectionType",
  "collectionName": "employees",
  "info": {
    "singularName": "employee",
    "pluralName": "employees",
    "displayName": "Employee"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "position": {
      "type": "string"
    },
    "hireDate": {
      "type": "date"
    },
    "pin": {
      "type": "string",
      "private": true
    },
    "hourlyRate": {
      "type": "decimal",
      "default": 20.00
    }
  }
}
