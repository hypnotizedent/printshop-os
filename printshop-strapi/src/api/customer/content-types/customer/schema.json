{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer",
    "description": "Customer accounts"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "company": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "zipCode": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "printavoId": {
      "type": "string"
    },
    "passwordHash": {
      "type": "string",
      "private": true
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customer"
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "customer"
    },
    "segment": {
      "type": "enumeration",
      "enum": [
        "vip",
        "b2b",
        "middleman",
        "b2c"
      ],
      "default": "b2c"
    },
    "segmentAutoDetected": {
      "type": "boolean",
      "default": true
    },
    "segmentDetails": {
      "type": "json"
    },
    "lastSegmentUpdate": {
      "type": "datetime"
    }
  }
}
