{
  "kind": "collectionType",
  "collectionName": "custom_orders",
  "info": {
    "singularName": "custom-order",
    "pluralName": "custom-orders",
    "displayName": "Custom Order",
    "description": "Custom design orders from the online designer"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "sessionId": {
      "type": "string",
      "required": true
    },
    "designSession": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::design-session.design-session"
    },
    "customerEmail": {
      "type": "email"
    },
    "customerId": {
      "type": "string"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer"
    },
    "garmentType": {
      "type": "enumeration",
      "enum": [
        "t-shirt",
        "hoodie",
        "tank-top",
        "long-sleeve",
        "polo",
        "sweatshirt",
        "hat",
        "jacket"
      ],
      "required": true
    },
    "garmentColor": {
      "type": "string",
      "default": "#FFFFFF"
    },
    "printMethod": {
      "type": "enumeration",
      "enum": [
        "screen-print",
        "dtg",
        "embroidery",
        "heat-transfer",
        "sublimation"
      ],
      "default": "screen-print"
    },
    "designs": {
      "type": "json",
      "required": true
    },
    "canvasData": {
      "type": "json"
    },
    "pricing": {
      "type": "json",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "in-production",
        "completed",
        "cancelled"
      ],
      "default": "pending",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "default": 1
    },
    "size": {
      "type": "string"
    },
    "color": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    },
    "productionFiles": {
      "type": "json"
    },
    "mockupUrl": {
      "type": "string"
    },
    "rushOrder": {
      "type": "boolean",
      "default": false
    }
  }
}
