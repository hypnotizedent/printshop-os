{
  "kind": "collectionType",
  "collectionName": "ticket_comments",
  "info": {
    "singularName": "ticket-comment",
    "pluralName": "ticket-comments",
    "displayName": "Ticket Comment"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "ticket": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::support-ticket.support-ticket",
      "inversedBy": "comments"
    },
    "userId": {
      "type": "string",
      "required": true
    },
    "userType": {
      "type": "enumeration",
      "enum": [
        "customer",
        "staff"
      ],
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "isInternal": {
      "type": "boolean",
      "default": false
    },
    "attachments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ticket-attachment.ticket-attachment",
      "mappedBy": "comment"
    }
  }
}
