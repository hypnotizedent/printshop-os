{
  "kind": "collectionType",
  "collectionName": "support_tickets",
  "info": {
    "singularName": "support-ticket",
    "pluralName": "support-tickets",
    "displayName": "Support Ticket"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "ticketNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Order Issue",
        "Art Approval",
        "Shipping",
        "Billing",
        "General"
      ],
      "required": true,
      "default": "General"
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "Low",
        "Medium",
        "High",
        "Urgent"
      ],
      "required": true,
      "default": "Medium"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Open",
        "In Progress",
        "Waiting",
        "Resolved",
        "Closed"
      ],
      "required": true,
      "default": "Open"
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "orderNumber": {
      "type": "string"
    },
    "closedAt": {
      "type": "datetime"
    },
    "assignedTo": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::employee.employee"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ticket-comment.ticket-comment",
      "mappedBy": "ticket"
    },
    "attachments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ticket-attachment.ticket-attachment",
      "mappedBy": "ticket"
    }
  }
}
