{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": "Production jobs"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "jobNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "PendingArtwork",
        "ArtworkReceived",
        "Pending",
        "Ready",
        "InProduction",
        "Complete",
        "OnHold",
        "Cancelled"
      ],
      "default": "PendingArtwork",
      "required": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "jobs"
    },
    "order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order",
      "inversedBy": "job"
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "productType": {
      "type": "string"
    },
    "productDescription": {
      "type": "text"
    },
    "mockupUrls": {
      "type": "json"
    },
    "artFileUrls": {
      "type": "json"
    },
    "inkColors": {
      "type": "json"
    },
    "imprintLocations": {
      "type": "json"
    },
    "productionMethod": {
      "type": "enumeration",
      "enum": [
        "ScreenPrinting",
        "DTG",
        "Embroidery",
        "HeatTransfer",
        "Sublimation",
        "Other"
      ]
    },
    "dueDate": {
      "type": "date",
      "required": true
    },
    "rushJob": {
      "type": "boolean",
      "default": false
    },
    "productionNotes": {
      "type": "text"
    },
    "internalNotes": {
      "type": "text"
    },
    "assignedTo": {
      "type": "string"
    },
    "startedAt": {
      "type": "datetime"
    },
    "completedAt": {
      "type": "datetime"
    },
    "estimatedHours": {
      "type": "decimal"
    },
    "actualHours": {
      "type": "decimal"
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "Low",
        "Normal",
        "High",
        "Urgent"
      ],
      "default": "Normal"
    },
    "tags": {
      "type": "json"
    }
  }
}
