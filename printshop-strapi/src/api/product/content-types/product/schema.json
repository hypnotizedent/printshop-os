{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Curated supplier products catalog (Top 500). Live inventory via /api/inventory/check/:sku"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "sku": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "brand": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "t-shirts",
        "polos",
        "sweatshirts",
        "hoodies",
        "jackets",
        "pants",
        "shorts",
        "hats",
        "bags",
        "accessories",
        "workwear",
        "athletic",
        "outerwear",
        "youth",
        "other"
      ],
      "default": "other"
    },
    "supplier": {
      "type": "enumeration",
      "enum": [
        "sanmar",
        "ascolour",
        "ssactivewear"
      ],
      "required": true
    },
    "description": {
      "type": "text"
    },
    "basePrice": {
      "type": "decimal"
    },
    "colors": {
      "type": "json"
    },
    "sizes": {
      "type": "json"
    },
    "images": {
      "type": "json"
    },
    "supplierProductId": {
      "type": "string"
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "isFavorite": {
      "type": "boolean",
      "default": false
    },
    "isCurated": {
      "type": "boolean",
      "default": false
    },
    "usageCount": {
      "type": "integer",
      "default": 0
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "tags": {
      "type": "json"
    },
    "specifications": {
      "type": "json"
    },
    "priceBreaks": {
      "type": "json"
    },
    "isTopProduct": {
      "type": "boolean",
      "default": false
    },
    "orderCount": {
      "type": "integer",
      "default": 0
    },
    "totalUnitsOrdered": {
      "type": "integer",
      "default": 0
    },
    "lastOrderedAt": {
      "type": "datetime"
    },
    "topProductScore": {
      "type": "decimal",
      "default": 0
    }
  }
}
