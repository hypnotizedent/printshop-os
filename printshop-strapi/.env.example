# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=1337

# ===========================================
# PUBLIC_URL - CRITICAL FOR ADMIN PANEL
# ===========================================
# This MUST be set to the publicly accessible URL of your Strapi instance.
# Without this, the /admin panel will not load correctly because assets
# are served from incorrect paths.
#
# For local development:
PUBLIC_URL=http://localhost:1337
#
# For production (examples):
# PUBLIC_URL=http://100.92.156.118:1337      # Direct IP access
# PUBLIC_URL=https://mintprints.ronny.works  # Domain with Cloudflare Tunnel
#
# IMPORTANT: After changing PUBLIC_URL, you MUST rebuild the admin panel:
#   npm run build
#   npm run start (or develop)
# ===========================================

# ===========================================
# Application Secrets
# ===========================================
APP_KEYS="toBeModified1,toBeModified2"
API_TOKEN_SALT=tobemodified
ADMIN_JWT_SECRET=tobemodified
TRANSFER_TOKEN_SALT=tobemodified
JWT_SECRET=tobemodified
ENCRYPTION_KEY=tobemodified

# ===========================================
# Database Configuration
# ===========================================
# Use 'sqlite' for development, 'postgres' for production
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# PostgreSQL (production)
# DATABASE_CLIENT=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=printshop_strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=your-secure-password
# DATABASE_SSL=false
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Email Configuration (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=orders@printshop.com
SENDGRID_FROM_NAME=PrintShop OS

# Legacy SMTP (if not using SendGrid)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@printshop.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM="PrintShop OS" <noreply@printshop.com>

# Production Team Email
PRODUCTION_TEAM_EMAIL=production@printshop.com

# ===========================================
# Payment Processing (Stripe)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# File Storage (S3 / MinIO)
# ===========================================
USE_S3=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=printshop-files
# For MinIO, set endpoint:
# S3_ENDPOINT=http://localhost:9000

# Local file storage path (when USE_S3=false)
LOCAL_STORAGE_PATH=./uploads

# ===========================================
# Frontend & CORS
# ===========================================
FRONTEND_URL=http://localhost:3000
PUBLIC_URL=http://localhost:1337

# ===========================================
# Shipping APIs
# ===========================================
# EasyPost - https://www.easypost.com/signup
EASYPOST_API_KEY=EZAK_your_api_key_here

# ===========================================
# External Integrations
# ===========================================
# Printavo API (for data sync)
PRINTAVO_EMAIL=your@email.com
PRINTAVO_TOKEN=your_printavo_token

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=AC_your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# ===========================================
# n8n Workflow Automation
# ===========================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_WEBHOOK_SECRET=your_n8n_webhook_secret

# ===========================================
# Notification Settings
# ===========================================
NOTIFICATIONS_ENABLED=true
API_SERVICE_URL=http://localhost:3002
